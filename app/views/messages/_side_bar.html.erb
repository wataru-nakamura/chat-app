<div class="side-top">
  <div class="user-name">
    <%= link_to edit_user_path(current_user) do %>
      <%= current_user.name %>
    <% end %>
  </div>
  <div class="create-btn">
  <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>

<div class="side-bottom">
  <% current_user.rooms.each do |room| %>
    <div class="chat-room">
      <div class="room-name">
        <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>
